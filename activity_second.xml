<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".SecondActivity">

    <ListView
            android:layout_width="416dp"
            android:layout_height="545dp"
            android:id="@+id/shoplist"
            tools:layout_editor_absoluteY="-148dp"
            tools:layout_editor_absoluteX="-21dp"
            android:scrollbars="vertical" tools:ignore="MissingConstraints"/>
    <Button android:layout_width="85dp"
            android:layout_height="46dp"
            android:text="@string/add"
            android:id="@+id/buttonAdd"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="-6dp">
    </Button>
    <Button
            android:id="@+id/prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="@string/home"
            android:textSize="24sp" tools:layout_editor_absoluteY="663dp" tools:layout_editor_absoluteX="55dp"
            tools:ignore="MissingConstraints">
    </Button>
    <Button
            android:id="@+id/cam_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_camera"
            android:backgroundTint="#00C54B"
            android:textSize="24sp"
            tools:layout_editor_absoluteY="663dp" tools:layout_editor_absoluteX="215dp"
            tools:ignore="MissingConstraints">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>

