<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="508dp"
            android:text="@string/welcome_back_student"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" tools:ignore="VisualLintOverlap"
            app:layout_constraintHorizontal_bias="0.435"/>
    <ImageView
            android:layout_width="237dp"
            android:layout_height="201dp"
            android:src="@mipmap/logo"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="84dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp" android:visibility="visible"
            tools:ignore="ContentDescription,ImageContrastCheck">
    </ImageView>

    <TextView
            android:layout_width="187dp"
            android:layout_height="57dp"
            android:text="@string/here_s_how_it_works"
            tools:ignore="MissingConstraints,TextSizeCheck"
            android:textSize="20sp"
            android:textColor="#00C54B"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent">
    </TextView>
    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_shopping_list"
            android:textSize="24sp"
            android:backgroundTint="#00C54B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.939"
            tools:ignore="TextContrastCheck">

    </Button>
    <TextView
            android:text="@string/simply_click_next_and_start_typing_in_the_food_items_for_your_checklist_if_you_rather_use_the_camera_continue_on_to_the_camera_button"
            android:layout_width="257dp"
            android:layout_height="123dp"
            android:id="@+id/textView2"
            android:textSize="20sp"
            tools:layout_editor_absoluteY="532dp"
            tools:layout_editor_absoluteX="77dp" tools:ignore="MissingConstraints,TextSizeCheck">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>